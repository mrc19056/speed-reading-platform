{
  "name": "speed-reading-platform",
  "version": "1.0.0",
  "description": "Hızlı okuma platformu - Production deployment için optimized",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "webpack --config webpack.config.prod.js",
    "build:dev": "webpack --config webpack.config.js",
    "test": "jest",
    "lint": "eslint .",
    "deploy": "./scripts/deploy.sh",
    "production": "NODE_ENV=production pm2 start ecosystem.config.js",
    "stop": "pm2 stop all",
    "restart": "pm2 restart all",
    "logs": "pm2 logs",
    "backup": "./scripts/backup.sh",
    "migrate": "node scripts/migration.js",
    "seed": "node scripts/seed.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^6.8.1",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "winston": "^3.10.0",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.9.0",
    "babel-loader": "^9.1.3",
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-react": "^7.22.5",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "mini-css-extract-plugin": "^2.7.6",
    "html-webpack-plugin": "^5.5.3",
    "terser-webpack-plugin": "^5.3.9",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "eslint": "^8.46.0"
  },
  "keywords": [
    "speed-reading",
    "education",
    "cpanel",
    "production"
  ],
  "author": "Speed Reading Platform Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}