# Production Environment Variables
NODE_ENV=production
PORT=3000

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/speedreading?retryWrites=true&w=majority
DB_NAME=speedreading_prod
DB_CONNECTION_TIMEOUT=30000
DB_MAX_POOL_SIZE=10

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-here-change-this-in-production
JWT_EXPIRE=7d
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-here
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=/public/uploads

# Email Configuration (if needed)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your-email-password

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/speedreading/app.log

# Monitoring
HEALTH_CHECK_PATH=/health
METRICS_PATH=/metrics

# SSL Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# cPanel Specific
CPANEL_USER=your-cpanel-username
DOMAIN=yourdomain.com
SUBDOMAIN=app

# Performance
COMPRESSION_LEVEL=6
STATIC_CACHE_MAX_AGE=31536000